<div class="container-fluid my-3">
    <div class="row">
        <div class="col-12 col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Active Requests</h3>
                </div>
                <div class="card-body">
                    <% if (requests.length < 1){ %>
                        <div class="alert alert-warning" role="alert">
                            No requests found!
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="text-primary">
                                <tr>
                                    <th>Contact Name</th>
                                    <th>Contact Email</th>
                                    <th>Contact Phone</th>
                                    <th>Property Address</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% requests.forEach(function(request){ %>
                                    <tr>
                                        <td><%= request.contact.name %></td>
                                        <td><%= request.contact.email %></td>
                                        <td><%= request.contact.mobile %></td>
                                        <td><%= request.property_address.street %> - <%= request.property_address.city %> - <%= request.property_address.state %> - <%= request.property_address.zip %></td>
                                        <% if(request.valid) {%>
                                            <td>Active | <%= request.status %></td>
                                        <% } else { %>
                                            <td>Expired | <%= request.status %></td>
                                        <% } %>
                                        <td>
                                            <i class="fas fa-link btn-clipboard copy-link-button" onclick="copyToClipboard('<%= request.url %>' , this);" data-toggle="tooltip" data-placement="left" title="Copy link to clipboard."></i>
                                            <a href="/requests/show/<%= request.id %>" class="mr-1"><i class="fas fa-eye"></i></a>
                                            <a href="/requests/delete/<%= request.id %>"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% })%>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>