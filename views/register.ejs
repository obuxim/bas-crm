<div class="mt-5 pt-5">
    <div class="container">
        <div class="card card-nav-tabs">
            <div class="card-header">
                <h2 class="card-title text-uppercase text-center">register</h2>
            </div>
            <div class="card-body">
                <form action="/register" method="POST">
                    <%- include('./partials/flash.ejs') %>
                    <div class="form-group">
                        <label for="name">Full name: </label>
                        <input type="text" class="form-control" id="name" name="name" value="<% typeof name != 'undefined' ? name : '' %>" placeholder="Enter your full name here..."/>
                    </div>
                    <div class="form-group">
                        <label for="email">Email address: </label>
                        <input type="email" class="form-control" id="email" name="email" value="<% typeof email != 'undefined' ? email : '' %>" placeholder="Enter your email here..."/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password: </label>
                        <input type="password" class="form-control" id="password" name="password" value="<% typeof password != 'undefined' ? password : '' %>" placeholder="Enter your password here..."/>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-lg bg-primary text-capitalize">register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>